$(function(){$('#exportExcel').jsExcelExport({'param':{'format':'excel'}});DepartmentController.initLoadSelectBox('#departmentId','#companyId',{param:{'page':'crm.managerCompany'}});$('.modal-footer').on('click','.reload',function(){window.location.reload();});$('#daterangepicker').datepicker({viewMode:'years',dateFormat:'mm/yy',changeMonth:true,changeYear:true,onClose:function(dateText,inst){var month=$("#ui-datepicker-div .ui-datepicker-month :selected").val();var year=$("#ui-datepicker-div .ui-datepicker-year :selected").val();$(this).val($.datepicker.formatDate('mm/yy',new Date(year,month,1)));}});$("#daterangepicker").focus(function(){$(".ui-datepicker-calendar").hide();$("#ui-datepicker-div").position({my:"center top",at:"center bottom",of:$(this)});});$('#viewWeek').on('click',function(){$('#table-container').slideUp(300);$('#table-container2').slideDown(300);})
$('#viewDate').on('click',function(){$('#table-container2').slideUp(300);$('#table-container').slideDown(300);})});